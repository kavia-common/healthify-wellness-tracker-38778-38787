# Healthify Frontend - Environment Template (.env.example)
# Copy this file to ".env" and adjust values for your environment.
# NOTE: Do not commit your real .env file to version control.

# Base URLs
# REACT_APP_BACKEND_URL: Origin of your backend service (no trailing slash).
REACT_APP_BACKEND_URL=https://api.example.com
# REACT_APP_API_BASE: Explicit API base URL if different from BACKEND (no trailing slash).
# If not set, code will default to ${REACT_APP_BACKEND_URL}/api
REACT_APP_API_BASE=https://api.example.com/api
# REACT_APP_FRONTEND_URL: Public origin of this frontend (used for building URLs).
REACT_APP_FRONTEND_URL=http://localhost:3000
# REACT_APP_WS_URL: WebSocket base URL. If not set, code derives from BACKEND as wss://.../ws
REACT_APP_WS_URL=wss://api.example.com/ws

# Environment and Build Tweaks
# REACT_APP_NODE_ENV mirrors NODE_ENV for environments where you need an override.
REACT_APP_NODE_ENV=development
# Disable Next.js telemetry equivalent flags (included for parity; harmless in CRA).
REACT_APP_NEXT_TELEMETRY_DISABLED=true
# Enable source maps in build (generally true in dev, false in production).
REACT_APP_ENABLE_SOURCE_MAPS=true

# App runtime
# Port for local dev or informational usage by the app.
REACT_APP_PORT=3000
# Trust reverse proxy headers (X-Forwarded-For/Proto). Useful when deployed behind proxies.
REACT_APP_TRUST_PROXY=false

# Logging
# Log level: one of silent|error|warn|info|debug (default: debug in dev, warn in prod)
REACT_APP_LOG_LEVEL=debug

# Healthcheck
# Path used by frontend to expose/consume health checks, if needed.
REACT_APP_HEALTHCHECK_PATH=/healthz

# Feature Flags
# Feature flags may be provided as JSON or comma-separated values (a=true,b=1,c).
# Example JSON including nested experiments:
REACT_APP_FEATURE_FLAGS={"onboarding":true,"newDashboard":false,"experiments":{"hydrationTips":true}}
# Global experiments toggle (fallback if specific key not set in FEATURE_FLAGS.experiments):
REACT_APP_EXPERIMENTS_ENABLED=true
